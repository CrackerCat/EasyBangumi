<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/container_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:paddingTop="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.heyanle.easy_view.nested_scrollable.NestedScrollableHost
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.heyanle.easybangumi.anim.home.view.AnimSourceTabView
                        android:id="@+id/source_tab_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.heyanle.easy_view.nested_scrollable.NestedScrollableHost>

                <com.heyanle.easybangumi.anim.home.view.AnimHomeView
                    android:id="@+id/anim_home_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/error_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="UseCompoundDrawables">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="100dp"/>

                    <ImageView
                        android:id="@+id/refresh_img_view"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_baseline_refresh_24"
                        app:tint="?attr/subtitleTextColor"
                        android:contentDescription="@string/error_click_to_refresh" />

                    <TextView
                        android:textColor="?attr/subtitleTextColor"
                        android:text="@string/error_click_to_refresh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="100dp"/>


                </LinearLayout>


            </LinearLayout>




        </androidx.core.widget.NestedScrollView>



    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</FrameLayout>
